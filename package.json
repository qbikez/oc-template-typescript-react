{
  "devDependencies": {
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "codecov": "3.0.2",
    "husky": "^0.14.3",
    "jest": "^25.1.0",
    "lerna": "^2.4.0",
    "lint-staged": "7.2.0",
    "oc": "^0.48.5",
    "prettier-eslint-cli": "^4.2.0",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "coverage": "codecov",
    "clean": "lerna clean",
    "dev": "jest --watch --runInBand",
    "updated": "lerna updated",
    "test": "jest",
    "publish": "lerna publish --exact",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "jest --findRelatedTests",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "packages"
    ],
    "testRegex": "(/__tests__/.*)\\.[tj]sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/**/*.(js|ts)",
      "!packages/coverage/**/*",
      "!node_modules/**",
      "!packages/**/scaffold/**/*",
      "!packages/**/utils/**/*"
    ]
  },
  "dependencies": {}
}
